<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>Title: <%= link_to task.title, task_path(task) %></li>
    <%= link_to "Destroy #{task.title}",
                task_path(task),
                method: :delete,
                data: { confirm: "Are you sure?"} %>
  <% end %>

</ul>

